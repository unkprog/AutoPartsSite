<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UserSecretsId>5f31b309-5846-42f4-976c-16f165c0bef9</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AutoPartsSite.Core\AutoPartsSite.Core.csproj" />
    <ProjectReference Include="..\AutoPartsSite.Models\AutoPartsSite.Models.csproj" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <TypeScriptTarget>ES2020</TypeScriptTarget>
    <TypeScriptJSXEmit>None</TypeScriptJSXEmit>
    <TypeScriptModuleKind>AMD</TypeScriptModuleKind>
    <TypeScriptCompileOnSaveEnabled>True</TypeScriptCompileOnSaveEnabled>
    <TypeScriptNoImplicitAny>False</TypeScriptNoImplicitAny>
    <TypeScriptRemoveComments>False</TypeScriptRemoveComments>
    <TypeScriptOutFile />
    <TypeScriptOutDir />
    <TypeScriptGeneratesDeclarations>False</TypeScriptGeneratesDeclarations>
    <TypeScriptNoEmitOnError>True</TypeScriptNoEmitOnError>
    <TypeScriptSourceMap>True</TypeScriptSourceMap>
    <TypeScriptMapRoot />
    <TypeScriptSourceRoot />
  </PropertyGroup>

  <ItemGroup>
    <TypeScriptCompile Include="wwwroot\app\app.ts" DependentUpon="app.html" />
    <Content Remove="wwwroot\app\init.js" />
    <None Remove="appsettings.jsn" />
    <Content Include="appsettings.jsn" />
    <Content Include="wwwroot\app\init.js" DependentUpon="index.html" />
    <None Include="..\.editorconfig" Link=".editorconfig" />

    <TypeScriptCompile Include="wwwroot\app\controller\main.ts" DependentUpon="main.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\search\index.ts" DependentUpon="search\index.html" />

    <TypeScriptCompile Include="wwwroot\app\controller\about\index.ts" DependentUpon="about\index.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\about\faq.ts" DependentUpon="about\faq.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\about\payment.ts" DependentUpon="about\payment.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\about\shipping.ts" DependentUpon="about\shipping.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\about\contact.ts" DependentUpon="about\contact.html" />

    <TypeScriptCompile Include="wwwroot\app\controller\news\index.ts" DependentUpon="news\index.html" />

    <TypeScriptCompile Include="wwwroot\app\controller\account\login.ts" DependentUpon="account\login.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\account\recovery.ts" DependentUpon="account\recovery.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\account\register.ts" DependentUpon="account\register.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\account\orders.ts" DependentUpon="account\orders.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\account\garage.ts" DependentUpon="account\garage.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\account\messages.ts" DependentUpon="account\messages.html" />
    <TypeScriptCompile Include="wwwroot\app\controller\account\settings.ts" DependentUpon="account\settings.html" />

    <TypeScriptCompile Include="wwwroot\app\controller\basket\index.ts" DependentUpon="basket\index.html" />

  </ItemGroup>

  <ItemGroup>
    <Folder Include="Database\Reorganization\News\" />
  </ItemGroup>
  
</Project>
